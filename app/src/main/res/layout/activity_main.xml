<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        >

        <EditText
            android:id="@+id/enter_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/enter_source"
             />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_bus_frontagain"/>

        <ImageView
            android:id="@+id/reverse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reverse"
            android:layout_marginStart="270dp"
            android:layout_marginTop="60dp"
            />

        <EditText
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:hint="@string/enter_destination"
            />
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/ic_stop"
            android:layout_marginTop="90dp"
            android:layout_marginStart="5dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:hint="@string/date"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:text="@string/search"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="190dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="130dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="150dp"
            android:text="@string/Today"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="150dp"
            android:text="@string/Tomorow"
            android:id="@+id/tomorow"
            android:textColor="@color/blue"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="340dp"
android:id="@+id/after"
        android:background="@color/red"/>

    <ImageView
        android:id="@+id/redbus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/rebbusjpggg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="@string/bus_tickets"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/after"
    android:layout_centerHorizontal="true"
    android:text="@string/you_can_aslo"
    android:layout_marginTop="15dp"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/bus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="20dp">
       <ImageView
           android:id="@+id/busweb"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/front_rbus"
           android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginStart="25dp"
            android:text="Bus Hire"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/food"
        android:layout_height="100dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="150dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:id="@+id/foodnfun"
            android:src="@drawable/ic_food"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="15dp"
            android:text="Food n Fun"/>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/car"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="280dp">
        <ImageView
            android:id="@+id/rpool1"
            android:layout_width="70dp"
            android:layout_height="70dp"
android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_car"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rPool"
            android:layout_marginTop="75dp"
            android:layout_marginStart="30dp"

            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offers"
        android:layout_above="@+id/home"
        android:textColor="@color/red"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All >"
        android:layout_above="@id/home"

        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        />
    <ImageView
        android:id="@+id/gift"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_gift"
        android:layout_above="@+id/home"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"/>

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/home_down_run"
    android:layout_alignParentBottom="true"
    android:layout_margin="30dp"
    android:id="@+id/home"
    android:layout_marginTop="40dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"/>
    <ImageView
        android:id="@+id/my_booking"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/squre_margin"
android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="30dp"

/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
android:id="@+id/textMyBooking"
        android:text="My Booking" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/music" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="220dp"
android:id="@+id/helpMain"
        android:text="My Help" />
    <ImageView
        android:id="@+id/MyAccount"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/account"
    android:layout_alignParentBottom="true"
   android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="40dp"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"

        android:text="My Account" />
</RelativeLayout>